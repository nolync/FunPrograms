	public static String answer(int num, boolean ans) {
		if(num % 2 == 1) {
			if(ans) {
				return "Incorrect.";
			}
			else {
				correctAnswers = correctAnswers + 1;
				return "Correct.";
			}
		}
		else if(num % 2 == 0) {
			if(ans) {
				correctAnswers = correctAnswers + 1;
				return "Correct.";
			}
			else {
				return "Incorrect.";
			}
		}
		else {
			return "Error.";
		}
	}
	public static void main(String[] args) {
		System.out.println("Welcome to the Ziam Trivia Game!");
		System.out.println();
		Scanner in = new Scanner(System.in);
		System.out.print("Enter 10 numbers between 1 and 50: ");
		int one = in.nextInt();
		int two = in.nextInt();
		int three = in.nextInt();
		int four = in.nextInt();
		int five = in.nextInt();
		int six = in.nextInt();
		int seven = in.nextInt();
		int eight = in.nextInt();
		int nine = in.nextInt();
		int ten = in.nextInt();
		System.out.println();
		System.out.println("1) " + question(one));
		boolean oneAnswer = in.nextBoolean();
		System.out.println(answer(one, oneAnswer));
		System.out.println();
		System.out.println("2) " + question(two));
		boolean twoAnswer = in.nextBoolean();
		System.out.println(answer(two, twoAnswer));
		System.out.println();
		System.out.println("3) " + question(three));
		boolean threeAnswer = in.nextBoolean();
		System.out.println(answer(three, threeAnswer));
		System.out.println();
		System.out.println("4) " + question(four));
		boolean fourAnswer = in.nextBoolean();
		System.out.println(answer(four, fourAnswer));
		System.out.println();
		System.out.println("5) " + question(five));
		boolean fiveAnswer = in.nextBoolean();
		System.out.println(answer(five, fiveAnswer));
		System.out.println();
		System.out.println("6) " + question(six));
		boolean sixAnswer = in.nextBoolean();
		System.out.println(answer(six, sixAnswer));
		System.out.println();
		System.out.println("7) " + question(seven));
		boolean sevenAnswer = in.nextBoolean();
		System.out.println(answer(seven, sevenAnswer));
		System.out.println();
		System.out.println("8) " + question(eight));
		boolean eightAnswer = in.nextBoolean();
