		System.out.println();
		System.out.println("9) " + question(nine));
		boolean nineAnswer = in.nextBoolean();
		System.out.println(answer(nine, nineAnswer));
		System.out.println();
		System.out.println("10) " + question(ten));
		boolean tenAnswer = in.nextBoolean();
		System.out.println(answer(ten, tenAnswer));
		System.out.println();
		System.out.println("Amount of answers correct: " + correctAnswers + "/10");
		System.out.println("Thanks for playing!");
		in.close();
	}
